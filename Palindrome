#include <stdio.h>
#include <stdlib.h>

int main()
{
    int n,rev=0,rem,N;
    printf("Enter A Number\n");
    scanf("%d",&n);
    N=n;
    while(n!=0)
    {
        rem=n%10;
        rev=rev*10+rem;
        n/=10;
    }
    if(N==rev)
        printf("%d is Palindrome",N);
    else
        printf("%d is not Palindrome",N);

    return 0;
}
